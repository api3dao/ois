{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Enable noEmit in every TS config which does not contain sources. This will make the compilation faster
    "noEmit": false,

    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "es5",

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,

    // Disabled because they are covered by Eslint rules
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // There is not much we can do when there is an error in libraries
    "skipLibCheck": true
  },
  "files": [],
  "references": [{ "path": "./src" }, { "path": "./test" }]
}
